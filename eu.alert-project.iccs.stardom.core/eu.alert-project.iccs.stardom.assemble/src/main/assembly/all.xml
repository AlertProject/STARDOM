<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>all</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>${project.groupId}:alert-connector:war:${project.version}</include>
        <include>${project.groupId}:ui:war:${project.version}</include>
      </includes>
    </dependencySet>
  </dependencySets>
    <fileSets>
        <fileSet>
          <directory>${basedir}/target/</directory>
          <outputDirectory>/</outputDirectory>
          <includes>
            <include>
              db-init.sql
            </include>
          </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../</directory>
            <outputDirectory>sources</outputDirectory>
            <includes>
               <include>eu.alert-project.iccs.graph</include>
               <include>eu.alert-project.iccs.analysis</include>
            </includes>
            <excludes>
                <exclude>**/*.iml</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/.settings/**</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/.project</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../eu.alert-project.iccs.stardom.core</directory>
            <outputDirectory>sources/eu.alert-project.iccs.stardom.core</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
            <excludes>
                <exclude>**/*.iml</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/.settings/**</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/.project</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../../eu.alert-project.iccs.events</directory>
            <outputDirectory>/sources/eu.alert-project.iccs.events</outputDirectory>
            <excludes>
              <exclude>**/*.iml</exclude>
              <exclude>**/target/**</exclude>
              <exclude>**/bin/**</exclude>
              <exclude>**/.settings/**</exclude>
              <exclude>**/.classpath</exclude>
              <exclude>**/.project</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>